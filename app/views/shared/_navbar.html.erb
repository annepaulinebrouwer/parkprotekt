<div class="navbar navbar-expand-sm navbar-dark sticky-top">
  <div class="container container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%#= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
      <%= image_tag 'Logo.svg' %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav nav-spaced">
        <li class="nav-item dropdown">
          <a href="#" class="nav-link dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-bs-offset="10,20">

          <%#= link_to "Mammals", "#", class: "nav-link" %>
            Mammals
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Red Fox", animal_path(Animal.find_by(slug: 'red-fox')), class: "dropdown-item" %>
              <%= link_to "Black Bear", animal_path(Animal.find_by(slug: 'black-bear')), class: "dropdown-item" %>
            </div>
        </li>
        <li class="nav-item">
          <%= link_to "Maps", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sightings", "#", class: "nav-link" %>
        </li>
        <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

            <%= image_tag "icons/Account.svg", class: "avatar", alt: "dropdown menu" %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Action", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
        <li class="nav-item">
          <select class="form-select" aria-label="Default select example">
            <option selected>Yosemite</option>
          </select>
        </li>
      </ul>
    </div>
  </div>
</div>
