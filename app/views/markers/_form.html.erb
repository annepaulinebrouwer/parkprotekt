<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">

        <h3>Create a new marker for <%= @animal.name %> </h3>

        <%= simple_form_for [@animal, @marker] do |f| %>
          <%= f.input :latitude, as: :float, required: true %>
          <%= f.input :longitude, as: :float, required: true %>
          <%= f.input :category, required: true, collection: Marker.categories, prompt: "Select type of marker" %>
          <%= f.input :title, required: true %>
          <%= f.input :description, required: true, as: :text %>
          <%= f.submit class: 'btn btn-flat mt-2' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
